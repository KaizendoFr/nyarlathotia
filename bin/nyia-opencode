#!/usr/bin/env bash
# SPDX-License-Identifier: AGPL-3.0-or-later OR Proprietary

# Auto-generated runtime entry point
set -e

script_name=$(basename "$0")
assistant_name="${script_name#nyia-}"

# Get platform-specific config directory
case "$(uname -s)" in
    Linux*)
        config_dir="${XDG_CONFIG_HOME:-$HOME/.config}/nyiakeeper"
        ;;
    Darwin*)
        config_dir="$HOME/Library/Application Support/nyiakeeper"
        ;;
    CYGWIN*|MINGW*|MSYS*)
        config_dir="${APPDATA:-$HOME/AppData/Roaming}/nyiakeeper"
        ;;
    *)
        # Unix fallback
        config_dir="$HOME/.config/nyiakeeper"
        ;;
esac

# Set configuration path and source template
export ASSISTANT_CONFIG="$config_dir/config/${assistant_name}.conf"
source "$(dirname "$0")/assistant-template.sh"
